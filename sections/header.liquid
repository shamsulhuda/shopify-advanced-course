<div class="header-section">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ shop.url }}">
                {% if settings.logo != blank %}
                    <img src="{{ settings.logo | img_url:'small' }}" width="auto" height="auto">
                {% else %}
                    {{ shop.name }}
                {% endif  %}
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {% for link in section.settings.menu.links %}
                <li class="nav-item{% if link.links.size > 0 %} dropdown{% endif %}">
                    <a class="nav-link{% if link.links.size > 0 %} dropdown-toggle{% endif %}" aria-current="page" href="{{ link.url }}"{% if link.links.size > 0 %} data-bs-toggle="dropdown" aria-expanded="false"{% endif %}>{{ link.title }}</a>
                        {% if link.links.size > 0 %}
                            <ul class="dropdown-menu">
                                {% for child in link.links %}
                                    <li><a class="dropdown-item" href="{{ child.url }}">{{ child.title }}</a></li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                </li>
                {% endfor %}
            </ul>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
            </div>
        </div>
        </nav>
</div>

{% schema %}
{
    "name": "Header",
    "settings": [
        {
            "type": "link_list",
            "id": "menu",
            "label": "Menu"
        }
    ]
}
{% endschema %}