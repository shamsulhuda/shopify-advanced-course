<div id="predictiveSearchSection">
    {% if predictive_search.performed %}
        <div id="predictive-search-results">
            <h4 id="predictive-search-products">Products</h4>
            {% if predictive_search.resources.products.size > 0 %}
             <ul class="list-inline">
                {% for product in predictive_search.resources.products %}
                    <li class="list-item my-2">
                        <a href="{{ product.url }}">
                            {{ product |  image_url: width:50 |  image_tag  }}
                            <span class="mx-2">{{ product.title }}</span>
                        </a>
                    </li>
                {% endfor %}
             </ul>
             {% else %}
             <p>No results found!</p>
            {% endif %}
            {% if predictive_search.resources.articles.size > 0 or predictive_search.resources.pages.size > 0 %}
                <h4 id="predictive-search-pages">Pages & Articles</h4>
                <ul class="list-inline">
                    {% for page in predictive_search.resources.pages %}
                        <li class="list-item my-2">
                            <a href="{{ page.url }}">
                                <span class="mx-2">{{ page.title }}</span>
                            </a>
                        </li>
                    {% endfor %}
                    {% for article in predictive_search.resources.articles %}
                        <li class="list-item my-2">
                            <a href="{{ article.url }}">
                                <span class="mx-2">{{ article.title }}</span>
                            </a>
                        </li>
                    {% endfor %}
                </ul>              
            {% endif %}
            <hr>
            <button class="btn btn-secondary btn-sm">
                Search for "{{ predictive_search.terms }}"
            </button>
        </div>
    {% endif %}
</div>